---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
import { ArrowRight, TrendingUp, Users, BarChart3 } from 'lucide-astro';

// Get latest articles and news
const articles = await getCollection('articles');
const news = await getCollection('news');

const featuredArticle = articles
  .filter(article => article.data.featured && !article.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];

const latestArticles = articles
  .filter(article => !article.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const latestNews = news
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout title="Raphaël Radzuweit - Open Source Economic Analysis">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-secondary-50 dark:from-gray-900 dark:via-gray-900 dark:to-gray-800 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-gray-100 mb-6">
            Public Data, Smart Models,  
            <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">
              Meaningful Impact
            </span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-4xl mx-auto leading-relaxed">
            I’m Raphaël Radzuweit — an economist and data scientist working at the intersection of policy, research, and technology. I build transparent, data-driven tools to support better decision-making in health, finance, and sustainability.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/articles" class="inline-flex items-center px-8 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors shadow-lg hover:shadow-xl">
              View My Research
              <ArrowRight size={20} class="ml-2" />
            </a>
            <a href="/contact" class="inline-flex items-center px-8 py-3 border-2 border-primary-600 text-primary-600 dark:text-primary-400 font-medium rounded-lg hover:bg-primary-50 dark:hover:bg-primary-900/20 transition-colors">
              Get In Touch
            </a>
          </div>
        </div>
      </div>

    <!-- Featured Article -->
    {featuredArticle && (
      <section class="py-16 bg-white dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
              Latest Analysis
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
              Deep dive into current economic trends with data-driven insights and interactive visualizations.
            </p>
          </div>

          <div class="bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-gray-800 dark:to-gray-700 rounded-2xl p-8 md:p-12">
            <div class="max-w-4xl mx-auto">
              <div class="flex items-center mb-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary-100 dark:bg-primary-900/20 text-primary-800 dark:text-primary-300">
                  Featured Analysis
                </span>
                <span class="ml-4 text-sm text-gray-600 dark:text-gray-300">
                  {featuredArticle.data.pubDate.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </span>
              </div>
              <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">
                {featuredArticle.data.title}
              </h3>
              <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
                {featuredArticle.data.description}
              </p>
              <div class="flex flex-wrap gap-2 mb-6">
                {featuredArticle.data.tags.map(tag => (
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white dark:bg-gray-600 text-gray-700 dark:text-gray-200">
                    {tag}
                  </span>
                ))}
              </div>
              <a href={`/articles/${featuredArticle.slug}`} class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-800 text-primary-600 dark:text-primary-400 font-medium rounded-lg shadow-lg hover:shadow-xl transition-all">
                Read Full Analysis
                <ArrowRight size={20} class="ml-2" />
              </a>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Recent Articles & News -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Recent Articles -->
          <div>
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100">
                Recent Articles
              </h2>
              <a href="/articles" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">
                View All →
              </a>
            </div>
            <div class="space-y-6">
              {latestArticles.map(article => (
                <article class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
                  <div class="flex items-center mb-3">
                    <time class="text-sm text-gray-500 dark:text-gray-400">
                      {article.data.pubDate.toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric' 
                      })}
                    </time>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
                    <a href={`/articles/${article.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                      {article.data.title}
                    </a>
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
                    {article.data.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {article.data.tags.slice(0, 3).map(tag => (
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 dark:bg-gray-600 text-gray-700 dark:text-gray-200">
                        {tag}
                      </span>
                    ))}
                  </div>
                </article>
              ))}
            </div>
          </div>

          <!-- Recent News -->
          <div>
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100">
                News & Updates
              </h2>
              <a href="/news" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">
                View All →
              </a>
            </div>
            <div class="space-y-6">
              {latestNews.map(post => (
                <article class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
                  <div class="flex items-center mb-3">
                    <time class="text-sm text-gray-500 dark:text-gray-400">
                      {post.data.pubDate.toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric' 
                      })}
                    </time>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
                    <a href={`/news/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
                    {post.data.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 dark:bg-gray-600 text-gray-700 dark:text-gray-200">
                        {tag}
                      </span>
                    ))}
                  </div>
                </article>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

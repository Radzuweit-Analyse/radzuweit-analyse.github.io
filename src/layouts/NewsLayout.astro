---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import YouTubeEmbed from '../components/YouTubeEmbed.astro';
import { Calendar, Tag, ArrowLeft } from 'lucide-astro';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    tags: string[];
    youtubeId?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <Header />
  
  <main class="py-8 bg-white dark:bg-gray-900">
    <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/news" class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium mb-6">
          <ArrowLeft size={20} class="mr-2" />
          Back to News
        </a>
        
        <div class="mb-6">
          <div class="flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-4">
            <div class="flex items-center">
              <Calendar size={16} class="mr-1" />
              {frontmatter.pubDate.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </div>
          </div>
          
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4 leading-tight">
            {frontmatter.title}
          </h1>
          
          <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed mb-6">
            {frontmatter.description}
          </p>
          
          <div class="flex flex-wrap gap-2">
            {frontmatter.tags.map(tag => (
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 dark:bg-primary-900/20 text-primary-800 dark:text-primary-300">
                <Tag size={14} class="mr-1" />
                {tag}
              </span>
            ))}
          </div>
        </div>
        
        {frontmatter.youtubeId && (
          <div class="mb-8">
            <YouTubeEmbed id={frontmatter.youtubeId} title={frontmatter.title} />
          </div>
        )}
      </div>
      
      <!-- Content -->
      <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:font-bold prose-p:leading-relaxed prose-a:text-primary-600 dark:prose-a:text-primary-400 prose-a:no-underline hover:prose-a:underline prose-strong:text-gray-900 dark:prose-strong:text-gray-100">
        <slot />
      </div>
      
      <!-- Footer -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">Share this update</h3>
          <div class="flex space-x-4">
            <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(frontmatter.title)}&url=${encodeURIComponent(Astro.url.toString())}`} 
               class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
              Twitter
            </a>
            <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`} 
               class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </article>
  </main>
  
  <Footer />
</Layout>
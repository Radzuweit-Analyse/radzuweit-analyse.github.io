---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import YouTubeEmbed from '../components/YouTubeEmbed.astro';
import { Calendar, User, Clock, Tag, ArrowLeft } from 'lucide-astro';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    author: string;
    pubDate: Date;
    updatedDate?: Date;
    readingTimeInMinutes: int;
    tags: string[];
    heroImage?: string;
    youtubeId?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <Header />
  
  <main class="py-8 bg-white dark:bg-gray-900">
    <!-- Article Header -->
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/articles" class="inline-flex items-center text-primary-600 dark:text-primary-100 hover:text-primary-700 dark:hover:text-primary-300 font-medium mb-6">
          <ArrowLeft size={20} class="mr-2" />
          Back to Articles
        </a>
        
        <div class="mb-6">
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-4">
            <div class="flex items-center">
              <Calendar size={16} class="mr-1" />
              {frontmatter.pubDate.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </div>
            <div class="flex items-center">
              <User size={16} class="mr-1" />
              {frontmatter.author}
            </div>
            <div class="flex items-center">
              <Clock size={16} class="mr-1" />
              {frontmatter.readingTime} min read
            </div>
          </div>
          
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4 leading-tight">
            {frontmatter.title}
          </h1>
          
          <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed mb-6">
            {frontmatter.description}
          </p>
          
          <div class="flex flex-wrap gap-2">
            {frontmatter.tags.map(tag => (
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 dark:bg-primary-900/20 text-primary-800 dark:text-primary-300">
                <Tag size={14} class="mr-1" />
                {tag}
              </span>
            ))}
          </div>
        </div>
        
        {frontmatter.heroImage && (
          <div class="aspect-video mb-8 rounded-xl overflow-hidden shadow-lg">
            <img src={frontmatter.heroImage} alt={frontmatter.title} class="w-full h-full object-cover" />
          </div>
        )}
        
        {frontmatter.youtubeId && (
          <div class="mb-8">
            <YouTubeEmbed id={frontmatter.youtubeId} title={frontmatter.title} />
          </div>
        )}
      </div>
      
      <!-- Article Content -->
      <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:font-bold prose-h2:text-2xl prose-h3:text-xl prose-p:leading-relaxed prose-a:text-primary-600 dark:prose-a:text-primary-100 prose-a:no-underline hover:prose-a:underline prose-strong:text-gray-900 dark:prose-strong:text-gray-100 prose-code:bg-gray-100 dark:prose-code:bg-gray-800 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-blockquote:border-primary-500 prose-blockquote:bg-primary-100 dark:prose-blockquote:bg-primary-900/20 prose-blockquote:p-4 prose-blockquote:rounded-lg">
        <slot />
      </div>
      
      <!-- Article Footer -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        {frontmatter.updatedDate && (
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            Last updated: {frontmatter.updatedDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </p>
        )}
        
        <div class="bg-gray-75 dark:bg-gray-800 rounded-lg p-6">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">Share this article</h3>
          <div class="flex space-x-4">
            <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(frontmatter.title)}&url=${encodeURIComponent(Astro.url.toString())}`} 
               class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
              Twitter
            </a>
            <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`} 
               class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </article>
  </main>
  
  <Footer />
</Layout>

<style is:global>
  /* Custom styles for math rendering */
  .katex {
    font-size: 1.1em;
  }
  
  .katex-display {
    margin: 1.5rem 0;
  }
  
  /* Interactive chart containers */
  .plotly-container {
    margin: 2rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
  }
  
  /* Code block improvements */
  pre {
    background: #1f2937 !important;
    border-radius: 0.5rem;
    padding: 1.5rem;
    overflow-x: auto;
  }
  
  pre code {
    background: transparent !important;
    padding: 0 !important;
    border-radius: 0 !important;
  }
</style>
